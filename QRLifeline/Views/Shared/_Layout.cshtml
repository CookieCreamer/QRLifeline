<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/Site.css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header class="navigation">
            <div class="content-wrapper header_container">
                <div class="float-left">
                    <section class="site-title"><img src="~/Images/header.png"/></section>
                </div>
                <div class="float-right">
                    <!--<section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>-->
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Purchase", "Purchase", "Home")</li>
                            <li>@Html.ActionLink("Testimonials", "Testimonials", "Home")</li>
                            <li>@Html.ActionLink("Team", "Team", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="content">
            @*@RenderSection("featured", required: false)*@
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>Copyright &copy; @DateTime.Now.Year, QR Lifeline</p>
                </div>
                <div class="float-right">
                    <section class="footer_logo"><img src="~/Images/footer_kraken.png"/></section>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
